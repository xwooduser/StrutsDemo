<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
  <data-sources />
  <form-beans >
    <form-bean name="registerForm" type="org.langsin.struts.form.RegisterForm" />

  </form-beans>

  <global-exceptions />
  <global-forwards />
  <action-mappings >
    <action
      attribute="registerForm"
      input="/register.jsp"
      name="registerForm"
      parameter="method"
      path="/register"
      scope="request"
      type="org.langsin.struts.action.RegisterAction" />

  </action-mappings>

  <message-resources parameter="org.langsin.struts.ApplicationResources" />
</struts-config>

